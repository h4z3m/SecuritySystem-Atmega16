#ifndef SYSTEM_MODES_H_
#define SYSTEM_MODES_H_
#define SYNC_HANDSHAKE 	(0xED)
/* Actual password length(5) + '#' + '\0' = 7 */
#define PASSWORD_LENGTH 7

/* System modes */
#define MODE_FIRST_BOOT 		(0xFF)
#define MODE_NORMAL_BOOT_LOCKED (0x00)
#define MODE_NORMAL_BOOT_MAIN	(0x02)
#define MODE_ALARM_MODE 		(0x03)
/* Control requests */
#define OPEN_DOOR_REQUEST 		(0x04)
#define CHANGE_PASS_REQUEST 	(0x05)

#define ERROR 					(0x00)
#define SUCCESS					(0x01)
#endif /* SYSTEM_MODES_H_ */
